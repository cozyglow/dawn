{% doc %}
  @prompt
    Create a countdown timer badge that displays days, hours, and minutes remaining until a specific deadline (e.g., "Order by December 20th for Christmas delivery"). The timer should be eye-catching and customizable, allowing the merchant to set the end date and customize the message and styling to match their store's branding.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-badge-{{ ai_gen_id }} {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 4px 12px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    max-width: 100%;
  }

  .ai-countdown-message-{{ ai_gen_id }} {
    color: {{ block.settings.message_color }};
    font-size: {{ block.settings.message_size }}px;
    font-weight: 600;
    text-align: center;
    margin: 0;
    line-height: 1.3;
  }

  .ai-countdown-timer-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.timer_gap }}px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    min-width: 60px;
  }

  .ai-countdown-value-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 50px;
    height: 50px;
    background-color: {{ block.settings.timer_bg_color }};
    color: {{ block.settings.timer_text_color }};
    font-size: {{ block.settings.timer_size }}px;
    font-weight: 700;
    border-radius: {{ block.settings.timer_border_radius }}px;
    padding: 8px;
  }

  .ai-countdown-label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  .ai-countdown-expired-{{ ai_gen_id }} {
    color: {{ block.settings.expired_color }};
    font-size: {{ block.settings.message_size }}px;
    font-weight: 600;
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-badge-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-countdown-message-{{ ai_gen_id }} {
      font-size: {{ block.settings.message_size | times: 0.9 }}px;
    }

    .ai-countdown-value-{{ ai_gen_id }} {
      min-width: 45px;
      height: 45px;
      font-size: {{ block.settings.timer_size | times: 0.9 }}px;
    }

    .ai-countdown-unit-{{ ai_gen_id }} {
      min-width: 50px;
    }

    .ai-countdown-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<countdown-timer-{{ ai_gen_id }}
  class="ai-countdown-badge-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.message != blank %}
    <div class="ai-countdown-message-{{ ai_gen_id }}">{{ block.settings.message }}</div>
  {% endif %}

  <div class="ai-countdown-timer-{{ ai_gen_id }}">
    {% if block.settings.show_days %}
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-value-{{ ai_gen_id }}" data-unit="days">00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">Days</div>
      </div>
    {% endif %}

    {% if block.settings.show_hours %}
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-value-{{ ai_gen_id }}" data-unit="hours">00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">Hours</div>
      </div>
    {% endif %}

    {% if block.settings.show_minutes %}
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-value-{{ ai_gen_id }}" data-unit="minutes">00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">Minutes</div>
      </div>
    {% endif %}

    {% if block.settings.show_seconds %}
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-value-{{ ai_gen_id }}" data-unit="seconds">00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">Seconds</div>
      </div>
    {% endif %}
  </div>

  <div class="ai-countdown-expired-{{ ai_gen_id }}" style="display: none;">
    {{ block.settings.expired_message }}
  </div>
</countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.endDate = this.dataset.endDate;
        this.timerInterval = null;
      }

      connectedCallback() {
        if (!this.endDate) {
          this.showExpired();
          return;
        }

        this.startCountdown();
      }

      disconnectedCallback() {
        if (this.timerInterval) {
          clearInterval(this.timerInterval);
        }
      }

      startCountdown() {
        this.updateTimer();
        this.timerInterval = setInterval(() => {
          this.updateTimer();
        }, 1000);
      }

      updateTimer() {
        const endDateTime = new Date(this.endDate).getTime();
        const now = new Date().getTime();
        const distance = endDateTime - now;

        if (distance < 0) {
          this.showExpired();
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        const daysEl = this.querySelector('[data-unit="days"]');
        const hoursEl = this.querySelector('[data-unit="hours"]');
        const minutesEl = this.querySelector('[data-unit="minutes"]');
        const secondsEl = this.querySelector('[data-unit="seconds"]');

        if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
        if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
        if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
        if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');
      }

      showExpired() {
        if (this.timerInterval) {
          clearInterval(this.timerInterval);
        }

        const timerEl = this.querySelector('.ai-countdown-timer-{{ ai_gen_id }}');
        const messageEl = this.querySelector('.ai-countdown-message-{{ ai_gen_id }}');
        const expiredEl = this.querySelector('.ai-countdown-expired-{{ ai_gen_id }}');

        if (timerEl) timerEl.style.display = 'none';
        if (messageEl) messageEl.style.display = 'none';
        if (expiredEl) expiredEl.style.display = 'block';
      }
    }

    customElements.define('countdown-timer-{{ ai_gen_id }}', CountdownTimer{{ ai_gen_id }});
  })();
</script>

